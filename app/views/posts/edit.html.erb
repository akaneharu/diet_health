<div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mt-5 mx-auto">
       <h1>投稿編集</h1>
        <%= form_with model: @post, url: post_path(@post.id), method: :patch do |f| %>
         <p>タイトル</p>
          <%= f.text_field :title %>
          
          <p>画像</p>
          <%= f.file_field :image, accept: "image/*" %>

         <p>本文</p>
          <%= f.text_area :body %><br>
  
          <%= f.submit %>
        <% end %>  
        <%= link_to "Show", post_path(@post.id) %> 
         |
        <%= link_to "Back", posts_path %>
      </div> 
    </div>
  </div>
