<h1>プロフィール編集</h1>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
      <label for="inputImage">プロフィール画像</label><br>
      <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
    </div>

    <div class="form-group">
      <label for="inputName">ユーザー名</label><br>
      <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
    </div>

    <div class="form-group">
      <label for="inputAge">年齢</label><br>
      <%= f.text_field :age, autofocus: true, id:"inputAge", placeholder:"入力しなくてもいいです" %>
    </div>

    <div class="form-group">
      <label for="inputGender">性別</label><br>
      <%= f.text_field :gender, autofocus: true, id:"inputGender", placeholder:"性別" %>
    </div>

    <div class="form-group">
      <label for="inputIntroduction">一言</label><br>
      <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"自己紹介文" %>"
    </div>

    <%= f.submit '編集', class: 'btn btn-secondary' %>
  <% end %>